<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sse.iamhere">

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".PartyDetailsActivity"
            android:theme="@style/AppThemeHost" />
        <activity
            android:name=".SettingsActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarLight"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".EventDetailsActivity"
            android:theme="@style/AppThemeHost" />
        <activity android:name=".AccountActivity" />
        <activity
            android:name=".AllEventsActivity"
            android:theme="@style/AppThemeHost" />
        <activity
            android:name=".MyPartiesActivity"
            android:theme="@style/AppThemeAttendee" />
        <activity
            android:name=".AttendeeEventDetailsActivity"
            android:theme="@style/AppThemeAttendee" />
        <activity
            android:name=".HomeActivity"
            android:label="@string/activity_home_title"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/TransparentStatusNavigationBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".VerificationActivity"
            android:screenOrientation="portrait"
            android:theme="@style/NoActionBarLight"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".AuthenticationActivity"
            android:theme="@style/NoActionBarLight"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".OnboardActivity"
            android:theme="@style/TransparentStatusBar" />
        <activity android:name=".MainActivity_depreciated" />
        <activity android:name=".ScannerActivity" />
        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>
</manifest>
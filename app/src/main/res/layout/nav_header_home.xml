<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="210dp"
    android:orientation="horizontal"
    android:layout_weight="1"
    android:padding="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:background="?side_nav_header_back"
    tools:background="@drawable/side_nav_bar_attendee">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom">

        <RelativeLayout
            android:id="@+id/nav_header_avatarLy"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/nav_header_avatar_bg"

            android:clickable="true"
            android:focusable="true"
            android:foreground="?selectableItemBackground">

            <ImageView
                android:id="@+id/nav_header_avatarIv"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_role_dark_grey_24dp"
                android:layout_centerInParent="true"
                tools:visibility="gone"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/nav_header_avatarTv"
                android:layout_width="65dp"
                android:layout_height="65dp"

                android:paddingBottom="2dp"
                android:gravity="center"

                tools:text="M"
                android:textSize="34sp"
                android:textColor="@color/grey_600"
                android:fontFamily="@font/roboto_slab"/>

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="42dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="20dp"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/nav_header_nameTv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textSize="22sp"
                android:fontFamily="@font/bree_serif"
                android:textColor="@android:color/white"
                android:visibility="gone"

                tools:text="Micheal A."
                tools:visibility="visible"/>


            <TextView
                android:id="@+id/nav_header_roleTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:textSize="18sp"
                android:fontFamily="@font/bree_serif"

                tools:text="Host" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/nav_header_dropdownIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="9dp"
        android:src="@drawable/ic_dropdown_down_white_24dp"

        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/nav_header_dropdownIv_label">

    </ImageView>

</LinearLayout>

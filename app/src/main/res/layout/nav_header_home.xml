<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="176dp"
    android:orientation="horizontal"
    android:layout_weight="1"
    android:padding="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark"
    android:background="?side_nav_header_back"
    tools:background="@drawable/side_nav_bar_attendee">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="0.1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom">

        <RelativeLayout
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/nav_header_avatar_bg">

            <ImageView
                android:id="@+id/nav_header_avatarIv"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_role_dark_grey_16dp"
                android:layout_centerInParent="true"
                tools:visibility="gone"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/nav_header_avatarTv"
                android:layout_width="65dp"
                android:layout_height="65dp"

                android:paddingBottom="5dp"
                android:gravity="center"

                android:text="A"
                android:textSize="34sp"
                android:textColor="@android:color/black"
                android:fontFamily="@font/roboto_slab"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/nav_header_nameTv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="8dp"
            android:text="Android Studio"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1" />

        <TextView
            android:id="@+id/nav_header_roleTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="android.studio@android.com" />

    </LinearLayout>

    <ImageView
        android:id="@+id/nav_header_dropdownIv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:padding="9dp"
        android:src="@drawable/ic_dropdown_down_white_24dp"

        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackgroundBorderless"
        android:contentDescription="TODO">

    </ImageView>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"

    android:layout_marginTop="20dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/verifi_code_otpEt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:hint="Verification Code"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:inputType="number"
            android:digits="1234567890"
            android:importantForAutofill="no" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/verifi_code_autocompleteTv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:padding="5dp"
        android:gravity="center_vertical"

        android:text="Verification completed automatically"
        android:textColor="#94000000"
        android:textSize="21sp"
        android:fontFamily="@font/bree_serif"

        android:drawableStart="@drawable/ic_check_green_filled_24dp"
        android:drawablePadding="12dp"
        android:visibility="gone"

        tools:visibility="visible"/>

    <Button
        android:id="@+id/verifi_code_continueBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:padding="12dp"
        android:layout_gravity="end"

        android:text="Continue"
        android:textSize="15sp"

        android:enabled="false"
        style="@style/Widget.AppCompat.Button.Colored"/>

</LinearLayout>